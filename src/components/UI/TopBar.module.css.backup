/* TopBar.module.css - Responsive 2-Row Layout */

/* ========================================
   BASE CONTAINER
   ======================================== */
.topBar {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(10, 10, 10, 0.95);
    -webkit-backdrop-filter: blur(20px);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 212, 255, 0.2);
    z-index: 50;
    padding-top: env(safe-area-inset-top, 0);
    display: flex;
    flex-direction: column;
    gap: 0;
}

/* ========================================
   ROW 1: Back Button + Cart + Lang (desktop)
   ======================================== */
.row1 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 1rem;
    gap: 12px;
    min-height: 52px;
}

/* ========================================
   ROW 2: Variant Tabs + Action Buttons
   ======================================== */
.row2 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 6px 1rem 10px;
    gap: 12px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
}

/* ========================================
   ZONE LEFT - Back Button
   ======================================== */
.zoneLeft {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
}

.backBtn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    min-height: 44px;
    max-width: 180px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.backBtn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--unbreak-cyan);
    color: var(--unbreak-cyan);
    transform: translateX(-2px);
}

.backIcon {
    font-size: 1rem;
    line-height: 1;
    flex-shrink: 0;
}

/* Back label visibility (default: full) */
.backLabelFull {
    display: inline;
}

.backLabelMedium {
    display: none;
}

/* ========================================
   ZONE RIGHT - Cart + Language
   ======================================== */
.zoneRight {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: nowrap;
}

/* ========================================
   CART BUTTON
   ======================================== */
.cartBtn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    min-height: 44px;
    background: linear-gradient(135deg, var(--unbreak-cyan), var(--unbreak-cyan-dark));
    border: none;
    border-radius: 8px;
    color: var(--unbreak-black);
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    position: relative;
}

.cartBtn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 212, 255, 0.4);
    filter: brightness(1.1);
}

.cartBtn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
}

.cartIcon {
    font-size: 1.1rem;
    line-height: 1;
}

.cartLabel {
    display: inline;
}

.cartBadge {
    position: absolute;
    top: -6px;
    right: -6px;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    background: #ff4444;
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ========================================
   LANGUAGE TOGGLE - UNIFIED STYLING
   Same appearance across ALL breakpoints
   ======================================== */
.langToggle {
    display: flex;
    align-items: center;
    gap: 2px;
    padding: 0.5rem 0.75rem;
    min-height: 44px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 6px;
    color: var(--text-secondary);
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    letter-spacing: 0.5px;
}

.langToggle:hover {
    background: rgba(0, 212, 255, 0.1);
    border-color: rgba(0, 212, 255, 0.3);
}

.langOption {
    padding: 2px 4px;
    border-radius: 3px;
    transition: all 0.2s ease;
}

.langOption.langActive {
    color: var(--unbreak-cyan);
    background: rgba(0, 212, 255, 0.15);
}

.langDivider {
    color: rgba(255, 255, 255, 0.3);
    font-weight: 300;
}

/* Desktop/Mobile visibility */
.desktopOnly {
    display: flex;
}

.mobileOnly {
    display: none;
}

/* ========================================
   VARIANT TOGGLE (Glashalter/Flaschenhalter)
   ======================================== */
.variantToggle {
    display: flex;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(0, 212, 255, 0.15);
    border-radius: 8px;
    padding: 4px;
    flex: 1;
    max-width: 320px;
}

.variantBtn {
    flex: 1;
    padding: 0.5rem 0.75rem;
    min-height: 40px;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
    text-align: center;
}

.variantBtn:hover {
    background: rgba(0, 212, 255, 0.08);
    color: white;
}

.variantBtn.active {
    background: rgba(0, 212, 255, 0.15);
    color: var(--unbreak-cyan);
    font-weight: 600;
}

.variantLabelFull {
    display: inline;
}

.variantLabelShort {
    display: none;
    font-size: 1.1rem;
}

/* ========================================
   ACTION GROUP (Colors + Settings)
   ======================================== */
.actionGroup {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: nowrap;
}

.actionBtn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.75rem;
    min-height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.actionBtn:hover {
    background: rgba(0, 212, 255, 0.1);
    border-color: rgba(0, 212, 255, 0.3);
    color: var(--unbreak-cyan);
}

.actionBtn.activePanel {
    background: rgba(0, 212, 255, 0.15);
    border-color: rgba(0, 212, 255, 0.4);
    color: var(--unbreak-cyan);
}

.icon {
    font-size: 1rem;
    line-height: 1;
}

.label {
    font-size: 0.8rem;
}

/* ========================================
   RESPONSIVE: 1024px - Tablet landscape
   ======================================== */
@media (max-width: 1024px) {
    .row1 {
        padding: 8px 0.75rem;
    }
    
    .row2 {
        padding: 6px 0.75rem 8px;
    }
}

/* ========================================
   RESPONSIVE: 768px - Tablet/Mobile breakpoint
   ======================================== */
@media (max-width: 768px) {
    /* Show medium back label */
    .backLabelFull {
        display: none;
    }
    
    .backLabelMedium {
        display: inline;
    }
    
    .backBtn {
        max-width: 140px;
    }
    
    /* Move language toggle to row 2 */
    .desktopOnly {
        display: none;
    }
    
    .mobileOnly {
        display: flex;
    }
    
    /* Action labels hidden */
    .actionBtn .label {
        display: none;
    }
    
    .actionBtn {
        padding: 0.5rem 0.6rem;
    }
}

/* ========================================
   RESPONSIVE: 600px - Small tablet
   ======================================== */
@media (max-width: 600px) {
    .row1 {
        padding: 6px 0.5rem;
        min-height: 48px;
    }
    
    .row2 {
        padding: 4px 0.5rem 8px;
        gap: 8px;
    }
    
    .variantToggle {
        max-width: 280px;
    }
}

/* ========================================
   RESPONSIVE: 500px - Large phone
   ======================================== */
@media (max-width: 500px) {
    .variantToggle {
        max-width: 220px;
    }
    
    .variantBtn {
        padding: 0.4rem 0.5rem;
        font-size: 0.8rem;
    }
    
    .cartLabel {
        display: none;
    }
    
    .cartBtn {
        padding: 0.5rem 0.75rem;
    }
    
    .langToggle {
        padding: 0.4rem 0.6rem;
    }
}

/* ========================================
   RESPONSIVE: 420px - Small phone
   ======================================== */
@media (max-width: 420px) {
    /* Back button icon only */
    .backLabelFull,
    .backLabelMedium {
        display: none;
    }
    
    .backBtn {
        padding: 0.5rem 0.6rem;
        max-width: 50px;
    }
    
    .backIcon {
        font-size: 1.2rem;
    }
    
    /* Compact variant buttons - show icons */
    .variantLabelFull {
        display: none;
    }
    
    .variantLabelShort {
        display: inline;
    }
    
    .variantToggle {
        max-width: 140px;
    }
    
    .variantBtn {
        padding: 0.4rem;
        min-height: 36px;
    }
    
    /* Compact action buttons */
    .actionBtn {
        padding: 0.4rem 0.5rem;
        min-height: 36px;
    }
    
    .icon {
        font-size: 0.95rem;
    }
    
    /* Compact cart */
    .cartBtn {
        padding: 0.4rem 0.6rem;
        min-height: 40px;
    }
    
    .cartIcon {
        font-size: 1rem;
    }
    
    /* Compact lang */
    .langToggle {
        padding: 0.35rem 0.5rem;
        min-height: 36px;
        font-size: 0.75rem;
    }
}

/* ========================================
   RESPONSIVE: 360px - Extra small phone
   ======================================== */
@media (max-width: 360px) {
    .row1 {
        padding: 4px 0.4rem;
        gap: 6px;
    }
    
    .row2 {
        padding: 4px 0.4rem 6px;
        gap: 6px;
    }
    
    .variantToggle {
        max-width: 120px;
    }
    
    .actionGroup {
        gap: 4px;
    }
    
    .cartBadge {
        min-width: 16px;
        height: 16px;
        font-size: 0.65rem;
        top: -4px;
        right: -4px;
    }
}

/* ========================================
   RESPONSIVE: 320px - Minimum supported
   ======================================== */
@media (max-width: 320px) {
    .row1,
    .row2 {
        padding: 4px 0.3rem;
        gap: 4px;
    }
    
    .backBtn {
        padding: 0.4rem 0.5rem;
    }
    
    .cartBtn {
        padding: 0.35rem 0.5rem;
    }
    
    .langToggle {
        padding: 0.3rem 0.4rem;
        font-size: 0.7rem;
    }
    
    .variantToggle {
        max-width: 100px;
        padding: 2px;
    }
    
    .variantBtn {
        padding: 0.3rem;
        min-height: 32px;
    }
    
    .actionBtn {
        padding: 0.3rem 0.4rem;
        min-height: 32px;
    }
}
